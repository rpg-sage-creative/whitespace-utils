{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "run-test-all",
			"command": "pnpm",
			"args": ["test"],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false
			}
		},
		{
			"label": "run-test-one-js",
			"command": "pnpm",
			"args": ["test:one", "${file}"],
			"group": {
				"kind": "test",
				"isDefault": "**/*.test.js"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false
			}
		},
		{
			"label": "run-test-one-ts",
			"command": "bash",
			"args": ["-c", "pnpm build && pnpm test:one <<< echo \"$(echo '${file}' | sed s/src/test/ | sed s/\\.ts/\\.test\\.js/)\""],
			"type": "shell",
			"group": {
				"kind": "test",
				"isDefault": "**/*.ts"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false
			}
		},
		{
			"label": "run-build",
			"command": "pnpm",
			"args": ["build"],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false
			}
		}
	]
}